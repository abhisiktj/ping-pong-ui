{
    "compilerOptions": {
      "target": "esnext",                  
      "module": "esnext",                  
      "jsx": "react-jsx",                  
      "moduleResolution": "node",         
      "skipLibCheck": true,               
      "esModuleInterop": true,             
      "strict": true,
      "noUnusedLocals": true,                      
      "types": ["react", "react-dom"]     
    },
    "include": [
      "src/**/*"                           
    ],
    "exclude": [
      "node_modules"                      
    ]
  }